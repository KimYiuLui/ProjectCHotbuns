<% include ../partials/header %>

<div class="container">
    <div class="row">
            <div class="col-md-4">
                <img class="mr-1" src="../../image/<%=product.image %>">
            </div>
            <div class="col-md-8">
                <div class="caption">
                    <h3 class="ml-2"><%= product.name %></h4>
                    <br>
                    <p class="ml-2"><%= product.description %></p>
                </div>
                <h4 class="ml-2">
                    € <%= product.price %>  </p>
                    <% if(!currentUser){ %>
                    <form class="form-inline">
                        <div class="form-group float-right">
                            <button name="product_id" value="<%= product._id %>" class="btn btn-sm btn-dark">Toevoegen aan winkelwagen</button>
                        </div>
                    </form>
                    <% } else{ %>
                    <form class="form-inline" action="/gebruiker/<%= currentUser._id  %>?_method=PUT" method="POST">
                        <div class="form-group float-right">
                            <input type="hidden" name="user_id" value="<%= currentUser._id %>">
                            <input type="hidden" name="product_id" value="<%= product._id %>">
                            <button class="btn btn-sm btn-dark">Toevoegen aan winkelwagen</button>
                        </div>
                    </form>
                    <% } %>
</div>
            </div>
    
    <div class="row">
        <div class="card card-body bg-light mt-3 container">
            <div class="text-left">
                <h4>Ingrediënten</h4>
                <p>bevat: <%= product.ingredients %> </p>
                <br>
                <h4>Allergie-informatie</h4>
                <p>bevat: <%= product.allergy %></p>
            </div>
            <hr>
            
        </div>
    </div>
</div>




<% include ../partials/footer %>

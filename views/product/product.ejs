<% include ../partials/header %>

<div class="container">
    <div class="row">
            <div class="col-md-4">
                <img class="mr-1" src="../../image/<%=product.image %>">
            </div>
            <div class="col-md-8">
                <div class="caption">
                    <h3 class="ml-2"><%= product.name %></h4>
                    <br>
                    <p class="ml-2"><%= product.description %></p>
                </div>
                    <h4 class="ml-2">€ <%= product.price %>  </p>
                    <button id="detailbutton" class="btn btn-sm btn-dark">Toevoegen aan winkelwagen</button>
                    <a class="ml-2" href="#" ><i class="far fa-heart fa-lg"></i></a>
                </div>
            </div>
    
    <div class="row">
        <div class="card card-body bg-light mt-3 container">
            <div class="text-left">
                <h4>Ingrediënten</h4>
                <p>bevat: <%= product.ingredients %> </p>
                <br>
                <h4>Allergie-informatie</h4>
                <p>bevat: <%= product.allergy %></p>
            </div>
            <hr>
            
        </div>
    </div>
</div>




<% include ../partials/footer %>

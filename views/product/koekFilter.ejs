<% include ../partials/header %>
<% var count = 0 %>

<div class="bg-light filter-bar">
    <div class="container mx-auto">

        <div>
            <h4 class="text-center">Filter</h4>
        </div>
        <form action="/koek/filter" method="POST">
            <div class="row">

                <div class="col">

                    <a>Soort koek</a>
                    <br />
                    <label class="form-check-label col-md">
                        <input class="form-check-input" type="radio" name="koeksoort" value="all" checked> Elke soort
                    </label> <!-- form-check.// -->
                    <label class="form-check-label col-md">
                        <input class="form-check-input" type="radio" name="koeksoort" value="choco"> Chocola
                    </label> <!-- form-check.// -->
                    <label class="form-check-label col-md">
                        <input class="form-check-input" type="radio" name="koeksoort" value="noot"> Noten
                    </label>  <!-- form-check.// -->
                    <label class="form-check-label col-md">
                        <input class="form-check-input" type="radio" name="koeksoort" value="car"> Caramel
                    </label>  <!-- form-check.// -->
                    <label class="form-check-label col-md">
                        <input class="form-check-input" type="radio" name="koeksoort" value="fruit"> Fruit
                    </label>  <!-- form-check.// -->
                    <label class="form-check-label col-md">
                        <input class="form-check-input" type="radio" name="koeksoort" value="coco" /> Coco's
                    </label>  <!-- form-check.// -->
                    <button class="btn btn-sm btn-dark">Filter</button>
                </div>
            </div>
        </form>
    </div>

</div>

<div class="container">
 <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% product.forEach(function(product){ %>
            <% count = count + 1 %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-2 d-block">
                <div class="img-thumbnail">
                    <a href="/<%=product.category %>/detail/<%= product._id %>""> 
                        <img class="rounded img-thumbnail" src="/image/<%= product.image %>"> </a>
                        
                   <div class="caption">
                       <p><%= product.name %></h4>
                   </div>
                  <p><strong>â‚¬ <%=product.price %></strong></p>
                   <p>
                       <a href="/<%=product.category %>/detail/<%= product._id %>" class="btn btn-info">Meer info</a>
                   </p>
                </div>
            </div>
        <% } ); %>
        <% if(count == 0){%>
        <h3> Er zijn geen producten gevonden!</h3>
        <% } %>
    </div>
   
</div>
    
    <% include ../partials/footer %>
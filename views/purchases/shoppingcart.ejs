<% include ../partials/header %>
<%

    var total = 0.00
    User.shoppingcart.forEach(function (product) {
    total = total + parseFloat(product.price)
    
    }); %>
    
<div class="container">

    <div class="row">
        <div class="container mx-auto">
            <h4> Winkelwagen </h4>
            <br />
            <a> Hieronder staan de producten momenteel in uw winkelwagen.</a>
            <br />
            <br />
            <a> Druk op de knop 'Afrekenen' om te beginnen met betalen</a>
            <div class="container">
                <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                    <!-- VERANDER DEZE LIJN ALS JE DINGEN IN WINKELWAGEN KAN ZETTEN -->
                    <% User.shoppingcart.forEach(function(product){ %>
                    <div class="col-lg-2 col-md-4 col-sm-6 mb-2 d-block">
                        <div class="img-thumbnail">
                            <img class="rounded img-thumbnail" src="/image/<%= product.image %>">
                            <div class="caption">
                                <a href="/<%=product.category %>/<%= product._id %>"><%= product.name %><a /></h4>
                            </div>
                            <p><strong>€ <%=product.price %></strong></p>
                            <p>
                                <form class="form-inline" action="/shoppingcart/delete?_method=PUT" method="POST">
                                    
                                        <input type="hidden" name="user_id" value="<%= currentUser._id %>">
                                        <input type="hidden" name="product_id" value="<%= product._id %>">
                                        <button name="product_id" value="<%= product._id %>" class="btn btn-sm btn-danger">Verwijder</button>
                                    
                                </form>
                            </p>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
            <h3>
                De totale prijs is € <%=total%>
            </h3>
            <a href="/purchase" class="btn btn-primary">Nu afrekenen</a>

        </div>
    </div>

</div>


<% include ../partials/footer %>
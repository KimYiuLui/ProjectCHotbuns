<% include ./partials/header %>
<div class="container mt-5"> 
    <h1 class="text-center">Inloggen</h1>
    <p class="text-center"><i class="fas fa-user fa-4x"></i></p>
</div>

<div class="container mb-5">
    <div class="row">
        <div style="width: 40%; margin: 0 auto; ">
            <div class="container">
                <form action="/login" method="POST">
                    <div class="form-group">
                        <label for="gebruikerN">Gebruikersnaam</label>
                        <input class="form-control" id="gebruikerN" type="text" name="username" placeholder="Gebruikersnaam">
                    </div>
                    <div class="form-group">
                        <label for="passW">Wachtwoord</label>
                        <input class="form-control" id="passW" type="password" name="password" placeholder="Wachtwoord">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Inloggen</button>
                    </div>
                </form>
                <p class="text-center">Geen account? <a href="#">Wachtwoord vergeten?</a>(nog niet functioneel)</p>
                <p class="text-center">Geen account? <a href="signup">Registreer nu!</a></p>
            </div>
        </div>
    </div>
</div>

<% include ./partials/footer %>

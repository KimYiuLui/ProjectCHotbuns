<% include ../partials/header %>
<% var count = 0%>

<div class="container mt-4 mb-4">
    <div class="row">
        <div class="col">
            <form action="/help/filter" method="POST">
                <div class="row">

                    <div class="col">
                        <label class="form-check-label col-md">
                            <input type="hidden" name="Filter" value="">
                        </label>  <!-- form-check.// -->
                        <button class="btn btn-sm btn-dark">Alle tickets</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <form action="/help/filter" method="POST">
                <div class="row">

                    <div class="col">
                        <label class="form-check-label col-md">
                            <input type="hidden" name="Filter" value="open">
                        </label>  <!-- form-check.// -->
                        <button class="btn btn-sm btn-dark">Alle open tickets</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col">
            <form action="/help/filter" method="POST">
                <div class="row">

                    <div class="col">
                        <label class="form-check-label col-md">
                            <input type="hidden" name="Filter" value="closed">
                        </label>  <!-- form-check.// -->
                        <button class="btn btn-sm btn-dark">Alle gesloten tickets</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- Statistieken-->

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Gebruiker</th>
                    <th scope="col">Onderwerp</th>
                    <th scope="col">Status</th>
                    <th scope="col">Meer info</th>
                </tr>
            <tbody>

                <% ticket.forEach(function(ticket){ %>
                <% count = count + 1%>
                <tr>
                    <th scope="row"><%=count%></th>
                    <td><%= ticket.name %></td>
                    <td><%= ticket.subject%></td>
                    <td><%= ticket.status%></td>
                    <td>
                        <a class="btn btn-sm btn-white-text nav-bg" data-toggle="tooltip" data-placement="top" title="Ticket bekijken" href="/help/ticket/<%= ticket._id %>"> <i class="fas fa-search"></i></a>
                    </td>
                </tr>
                <% }) %>
            </tbody>



        </table>

    </div>



    <% include ../partials/footer %>
